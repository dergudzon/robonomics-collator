[Unit]
Description=robonomics
After=network.target

[Service]
User=collator-{{ item }}
Group=collator-{{ item }}
Type=simple
ExecStart=/usr/bin/robonomics --name "{{ nodename_prefix }}-{{ item }}" --validator --lighthouse-account "{{ lighthouse_account }}" --telemetry-url {{ telemetry_url }} --in-peers 500 --out-peers 500 --no-mdns --port 313{{ '%02d' % item }} --execution Wasm -- --execution Wasm --in-peers 500 --out-peers 500 --port 323{{ '%02d' % item }}
Restart=on-failure

[Install]
WantedBy=multi-user.target